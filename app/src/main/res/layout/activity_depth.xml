<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rachitpuri.tennisandroidmobilevfinal.DepthActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depth Game"
        android:id="@+id/tvTitleDepth"
        android:paddingRight="8dp"
        android:textAppearance="?android:attr/textAppearanceLarge"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:id="@+id/tvScoreDepth"
        android:paddingRight="50dp"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/tvTitle"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5/50"
        android:id="@+id/tvScoreCountDepth"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:layout_below="@+id/tvTitle"


        />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ImageView android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="1000dp"
            android:maxHeight="2000dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tcourt"
            />
        <TextView
            android:layout_width="83dp"
            android:layout_height="106dp"

            android:layout_marginLeft="125dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:padding="12dip"

            android:background="#AA000000"
            android:textColor="#ffffffff"
            android:id="@+id/tvDeepShot"
            android:text="Mid Court" />

        <TextView
            android:layout_width="83dp"
            android:layout_height="106dp"

            android:layout_marginLeft="42dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="12dip"
            android:id="@+id/tvserviceBox"
            android:background="#AA000000"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:text="Service Box" />







        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dip"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:padding="12dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/tvCorrectnessDepth"
            android:text="Correct!" />



    </FrameLayout>
</RelativeLayout>
